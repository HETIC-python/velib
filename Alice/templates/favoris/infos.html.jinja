{% import 'carte_generator.html.jinja' as map %}
{% import 'header.html.jinja' as header %}
{% import 'footer.html.jinja' as footer %}

{{header.makeHeader("Infos d'un favoris","https://unpkg.com/leaflet@1.7.1/dist/leaflet.css")}}

<style>
.modify {
    background-color: #007bff; 
    color: #fff;
    border: none;
}
.actions {
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
}

.actions button {
    padding: 5px 10px;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
}

.conteneur {
    max-width: 900px;
    margin:  auto;
    padding: 20px;
}

h2 {
    text-align: center;
}

.station-details {
    display: flex;
    align-items: center;
    margin-top: 20px;
}

.station-details img {
    width: 70%;
    border-radius: 5px;
    margin-right: 20px;
}

.info {
    flex: 1;
}

.info h3 {
    margin-top: 0;
}

.info p {
    margin: 5px 0;
}

</style>
<div class="conteneur">
